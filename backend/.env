# Environment Configuration
PORT=8080
DEBUG=true

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=faircoin
DB_PASSWORD=your_password_here
DB_NAME=faircoin_db
DB_SSLMODE=disable

# For development, use SQLite
DB_TYPE=sqlite
DB_PATH=./faircoin.db

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Community Basket Index Oracle
CBI_UPDATE_INTERVAL=24h
CBI_API_URL=http://localhost:8080/api/v1/cbi

# Monetary Policy
BASE_MONTHLY_ISSUANCE=1000
MAX_MONTHLY_GROWTH_RATE=0.02
HOLDING_CAP_PERCENTAGE=0.02

# Fairness System
MIN_PFI_FOR_PROPOSALS=50
MIN_TFI_FOR_MERCHANT=30
ATTESTATION_REQUIRED_COUNT=3

# Security
BCRYPT_COST=12
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000